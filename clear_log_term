Set-location "Z:\Public\!Выгрузки\Терминал1"
$date = (Get-Date).AddDays(-2)
Get-ChildItem -Path Z:\Public\!Выгрузки\Терминал1 | where {!$_.PSIsContainer} |
foreach {
   if ($_.LastWriteTime -lt $date) {
            Remove-Item $_ 
   }
}

